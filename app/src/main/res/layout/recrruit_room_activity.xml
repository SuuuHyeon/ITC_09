<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.RecruitRoomActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_edittext2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="24dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_product"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:src="@drawable/common_google_signin_btn_icon_dark"
                app:shapeAppearanceOverlay="@style/roundImage"
                />

            <Button
                android:id="@+id/img_upload_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="사진선택"
                app:cornerRadius="15dp"
                android:layout_margin="10dp" />


            <TextView
                android:id="@+id/productNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext2"
                android:drawableLeft="@drawable/baseline_mode_24"
                android:drawablePadding="8dp"
                android:hint="상품명"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="상품 가격"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="8dp"

                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="10000"
                    android:textAlignment="textEnd"
                    android:inputType="text"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background" />
            </LinearLayout>

            <TextView
                android:id="@+id/productDetailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="상품 상세내용"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/productDetail"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext2"
                android:drawableLeft="@drawable/baseline_mode_24"
                android:drawablePadding="8dp"
                android:hint="상품상세"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="인원수 "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/maxMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:entries="@array/person_array"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTextStyle" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/recruitOkBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple"
                android:text="방만들기"
                android:textSize="18dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>